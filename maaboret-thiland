<script>
  let from = '';
  let to = '';
  let people = 1;
  let date = '';

  function selectFrom(value) {
    from = value;
    showNext('step-from', 'step-to');
  }

  function selectTo(value) {
    to = value;
    showNext('step-to', 'step-people');
  }

  function selectPeople(value) {
    people = value;
    showNext('step-people', 'step-date');
  }

  function selectDate(value) {
    date = value;
    document.getElementById('step-date').classList.add('hidden');
    document.getElementById('step-summary').classList.remove('hidden');

    document.getElementById('summaryText').innerText =
      `××¢×‘×•×¨×ª ×Ö¾${from} ×œÖ¾${to} | ${people} ×× ×©×™× | ${value === 'today' ? '×”×™×•×' : '××—×¨'}`;
  }

  function showNext(current, next) {
    document.getElementById(current).classList.add('hidden');
    document.getElementById(next).classList.remove('hidden');
  }

  function goToBooking() {
    /*
      ğŸ”—ğŸ”—ğŸ”—  ×›××Ÿ ×©××™× ×œ×™× ×§×™× ×××™×ª×™×™× ×©×œ×š  ğŸ”—ğŸ”—ğŸ”—

