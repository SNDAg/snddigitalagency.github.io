<script>
  let from = '';
  let to = '';
  let people = 1;
  let date = '';

  function transition(fromId, toId) {
    document.getElementById(fromId).classList.add('hidden');
    const next = document.getElementById(toId);
    next.classList.remove('hidden');
    next.classList.remove('step');
    void next.offsetWidth; // reset animation
    next.classList.add('step');
  }

  function selectFrom(value) {
    from = value;

    // ×”×¡×ª×¨×ª ×”×™×¢×“ ×”×–×”×” ×œ××•×¦×
    document.querySelectorAll('#step-to button').forEach(btn => {
      btn.style.display = btn.dataset.place === value ? 'none' : 'block';
    });

    transition('step-from', 'step-to');
  }

  function selectTo(value) {
    to = value;
    transition('step-to', 'step-people');
  }

  function selectPeople(value) {
    people = value;
    transition('step-people', 'step-date');
  }

  function selectDate(value) {
    date = value;
    transition('step-date', 'step-summary');

    document.getElementById('summaryText').innerText =
      `××¢×‘×•×¨×ª ×Ö¾${from} ×œÖ¾${to} | ${people} ×× ×©×™× | ${date}`;
  }

  function goToBooking() {
    // ğŸ”— ×›××Ÿ ×©××™× ×œ×™× ×§ affiliate ×××™×ª×™
    window.location.href = "https://example.com/your-ferry-link";
  }
</script>

